include includes/header.jade
section.results.results__download
    aside
        a.results__back(href = "model.html") Back
        .filter
            h4.filter__title Pages Per Minute
            a.filter__item 20 - 35
            a.filter__item 20 - 35
            a.filter__item 20 - 35
            a.filter__item 20 - 35
    main
        h1 Your head-to-head comparisons are ready!
        - var n = 0
        while n < 4
            article.results__item
                img.results__img(src = 'imgs/img-MX-M354N.jpg')
                h2.results__title Sharp MX-M354N
                span.results__competition Canon imageRUNNER ADVANCE 4035
                a.results__btn(href = "#") Download Report
                - n++
        .download__overlay(onclick = "window.open('results.html', '_self')")
        .download__modal
            label Please provide your email to download report:
            input.download__email(type = 'email', placeholder = 'print-master@company.com')
            input.download__btn(type = 'submit', value = 'Download Report', onclick = "document.querySelector('.download__email').className += ' download__email--error'")
            a.download__close(href="results.html")
                
include includes/footer.jade
